<span class="settings-btn">Настройки</span>

<script id="settingsDialogTemplate" type="text/x-jquery-tmpl">
    <div id="settingsDialog" class="panel">
        <div class="row">
            <label for="timeInterval">Интервал между отправкой сообщений: </label>
            <input type="number" id="timeInterval" value="${settings.messagesInterval}" style="width: 50px;" maxlength="2" min="1" max="99" />
            <label> ceк.</label>
        </div>
        <div class="row">
            <label>Application ID: <b>${applicationId}</b></label>
        </div>
        <div class="row">
            <label for="debugMode">DEBUG MODE (эмуляция):</label>
            <input type="checkbox" id="debugMode" {{if settings.debugMode}} checked="checked" {{/if}} />
        </div>
    </div>
</script>