@model  VkApp.Web.Models.AppView
<div class="panel authentication" step="authentication">
    <label class="title">Авторизация</label>

    <div class="row hidden">
        <label>Перейдите на страницу <a href="@Model.AuthenticationUrl" target="_blank">авторизации</a></label>
    </div>

    <div class="row hidden">
        И введите результат из адресной строки сюда: <input id="authResultInput" class="url-input" type="text" />
    </div>

    <div class="row hidden">
        <button id="initAppButton" class="active-button">Готово</button>
    </div>

    <div class="row">
        <button id="loginButton" class="active-button">Войти</button>
    </div>

    <div class="row">
        <div class="summary fail"></div>
    </div>
</div>